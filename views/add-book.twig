{% extends 'layout.twig' %}

{% block content %}
    <form action="/add" method="post" autocomplete="off" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Book name</label>
            <input required type="text" class="form-control" id="name" name="name" placeholder="Enter book name" value="{% if form.name is defined %}{{ form.name }}{% endif %}">
        </div>
        <div class="form-group">
            <label for="isbn">Book ISBN</label>
            <input required type="text" class="form-control" id="isbn" name="isbn" placeholder="Enter book ISBN"  value="{% if form.isbn is defined %}{{ form.isbn }}{% endif %}">
        </div>
        <div class="form-group">
            <label for="author">Book Author(s)</label>
            <input required type="text" class="form-control" id="author" name="author" placeholder="Enter book Author(s)" value="{% if form.author is defined %}{{ form.author }}{% endif %}">
        </div>
        <div class="form-group">
            <label for="publisher">Book Publisher</label>
            <input required type="text" class="form-control" id="publisher" name="publisher" placeholder="Enter book Publisher" value="{% if form.publisher is defined %}{{ form.publisher }}{% endif %}">
        </div>
        <div class="form-group">
            <label for="release_date">Book release date</label>
            <input required type="number" class="form-control" id="release_date" name="release_date" placeholder="Enter book release date" value="{% if form.release_date is defined %}{{ form.release_date }}{% endif %}">
        </div>
        <div class="form-group">
            <label for="cover">Book cover</label>
            <input required type="file" class="form-control-file" id="cover" name="cover">
        </div>
        <div id="button-row" class="form-group">
            <button type="submit" class="btn btn-secondary btn-lg">Submit</button>
        </div>
    </form>
{% endblock %}

{% block stylesheets %}
    <link rel='stylesheet' href='/stylesheets/book-add.css' />
{% endblock %}
